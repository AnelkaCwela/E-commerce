@model OurShop.Models.DataModel.SizeModel

@{
    ViewData["Title"] = "Create Size";
    Layout = "_HomeLayout";
}

<h1>Create Size</h1>

<section>
    <h4>Create Size</h4>
    <hr />
    <div class="alert-primary font-weight-bolder">
        @ViewBag.Success
    </div>
    <div class="alert-danger font-weight-bolder">
        @ViewBag.USuccess
    </div>
    <a class="text-dark" asp-area="" asp-controller="Manage" asp-action="Index">Back</a>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateSize">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Size" class="control-label"></label>
                    <input asp-for="Size" class="form-control" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" style="width:auto" value="Create" class="btn btn-primary">Create Size</button>
                </div>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
