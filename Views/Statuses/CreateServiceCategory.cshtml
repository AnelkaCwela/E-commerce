@model OurShop.Models.DataModel.ServiceCategoryModel

@{
    ViewData["Title"] = "Create Service Category";
    Layout = "_HomeLayout";
}


    <section class="home-section">
        <h4>Create Service Category</h4>
        <hr />
        <div class="alert-primary font-weight-bolder">
            @ViewBag.Success
        </div>
        <div class="alert-danger font-weight-bolder">
            @ViewBag.USuccess
        </div>
        <a class="text-dark" asp-area="" asp-controller="Manage" asp-action="Index">Back</a>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateServiceCategory">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ServiceCategory" class="control-label"></label>
                        <input asp-for="ServiceCategory" class="form-control" />
                        <span asp-validation-for="ServiceCategory" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" style="width:auto" value="Create" class="btn btn-primary">Create Category</button>
                    </div>

                </form>
            </div>
        </div>
    </section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
