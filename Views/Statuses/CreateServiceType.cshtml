@model OurShop.Models.DataModel.ServiceTypeModel

@{
    ViewData["Title"] = "Create Service Type";
    Layout = "_HomeLayout";
}

<section class="home-section">


    <h4>Create Service Type</h4>
    <hr />
    <div class="alert-primary font-weight-bolder">
        @ViewBag.Success
    </div>
    <div class="alert-danger font-weight-bolder">
        @ViewBag.USuccess
    </div>
    <a class="text-dark" asp-area="" asp-controller="ManageServe" asp-action="Index">Back</a>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateServiceType">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ServiceType" class="control-label"></label>
                    <input asp-for="ServiceType" class="form-control" />
                    <span asp-validation-for="ServiceType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceCategoryId" class="control-label"></label>

                    <select asp-for="ServiceCategoryId" class="form-control" asp-items="ViewBag.ServiceCategoryId"></select>
                    <span asp-validation-for="ServiceCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" style="width:auto" value="Create" class="btn btn-primary">Create ServiceType</button>
                </div>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}