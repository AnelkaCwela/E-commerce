@model OurShop.Models.DataModel.CategoryModel

@{
    ViewData["Title"] = "Create Category";
    Layout = "_HomeLayout";
}


<section class="home-section">
    <h4>Create Category</h4>
    <hr />
    <div class="alert-primary font-weight-bolder">
        @ViewBag.Success
    </div>
    <div class="alert-danger font-weight-bolder">
        @ViewBag.USuccess
    </div>
    <a class="text-dark" asp-area="" asp-controller="Manage" asp-action="Index">Back</a>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateCategory">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypeId" class="control-label"></label>

                    <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" style="width:auto" value="Create" class="btn btn-primary">Create Category</button>
                </div>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
