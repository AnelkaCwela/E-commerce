@model BrandModel
@{
    ViewData["Title"] = "Info";
    Layout = "_HomeLayout";
}
<section class="home-section">
    <div class="card-body">
        <form asp-action="Brand" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrandName" class="control-label"></label>
                <input asp-for="BrandName" placeholder="Brand Name" class="form-control card" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandSlogn" class="control-label"></label>
                <input asp-for="BrandSlogn" placeholder="Bussness Slogan" class="form-control card" />
                <span asp-validation-for="BrandSlogn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandLogo" class="control-label"></label>
                <div class="custom-file">

                    <input type="file"  asp-for="BrandLogo" class="form-control custom-file-input" />
                    <label asp-for="BrandLogo" class="custom-file-label">Chose-File...</label>
                    <span asp-validation-for="BrandLogo" class="text-danger">@ViewBag.file</span>
                </div>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}