@model ContactDetailModel
@{
    ViewData["Title"] = "Info";
    Layout = "_HomeLayout";
}
<section class="home-section">
    <div class="card-body">
        <form asp-action="BrandContact" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TelNo" class="control-label"></label>
                <input asp-for="TelNo" placeholder="Bussness Name" class="form-control card" />
                <span asp-validation-for="TelNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FaxNo" class="control-label"></label>
                <input asp-for="FaxNo" placeholder="Bussness Name" class="form-control card" />
                <span asp-validation-for="FaxNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" placeholder="Bussness Name" class="form-control card" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="SignUp" class="btn btn-primary" />
            </div>
        </form>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
