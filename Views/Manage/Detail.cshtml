@model IteamDetaiInsertModel
@{

    ViewData["Title"] = "Product Details";
    Layout = "_HomeLayout";
}




<section class="home-section">
    <div class="card mb-3">
        <div class="card-text text-center">
            Product Name :@Model.ItermName
        </div>
        <div class="card-img">
            <span class="img-responsive">
                <img class="img-rounded img-responsive" role="img" src="data:image/jpg;base64,@System.Convert.ToBase64String(Model.ImageData)" width="200" height="200" asp-append-version="true" />
            </span>
        </div>
        <div class="card-body">
            <h5> Price : @Model.Price</h5>

            <h5>
                Gander : <select asp-for="GanderId" class="form-control" readonly asp-items="ViewBag.GanderId"></select>
            </h5>
            <h5>
                Category : <select asp-for="CategoryId" readonly class="form-control" asp-items="ViewBag.CategoryId"></select>
            </h5>
        </div>
        <div class="card-footer">
            <a asp-action="Delete" asp-controller="Manage" class="btn btn-sm btn-danger" asp-route-Id="@Model.IteamId">Remove Product</a>
            <a asp-action="UpdateItem" asp-controller="Manage" class="btn btn-sm btn-success" asp-route-Id="@Model.IteamId">Update Product</a>
            <a asp-action="Upload" asp-controller="Manage" class="btn btn-sm btn-info" asp-route-Id="@Model.IteamId">Upload More Images</a>
        </div>

    </div>
    <br />
    <hr />
    <h1> Enter Product Details</h1>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Detail" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IteamId" />
                <input type="hidden" asp-for="CategoryId" />
                <input type="hidden" asp-for="GanderId" />
                <input type="hidden" asp-for="Price" />
                <input type="hidden" asp-for="GanderId" />
                <input type="hidden" asp-for="ItermName" />
                <input type="hidden" asp-for="ImageData" />
                <div class="form-group">
                    <label asp-for="NoOfIteam" class="control-label"></label>
                    <input asp-for="NoOfIteam" class="form-control" />
                    <span asp-validation-for="NoOfIteam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SizeId" class="control-label"></label>
                    <select asp-for="SizeId" class="form-control" asp-items="ViewBag.SizeId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ColorId" class="control-label"></label>
                    <select asp-for="ColorId" class="form-control" asp-items=" ViewBag.ColorId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>

