@model ImageInsertModel
@{

    ViewData["Title"] = "Upload Image";
    Layout = "_HomeLayout";
}



<section class="home-section">
    <div class="card mb-3">
        <div class="card-text text-center">
            Iteam Name :@Model.ItermName
        </div>
        <div class="card-img">
            <span class="img-responsive">
                <img class="img-rounded img-responsive" role="img" src="data:image/jpg;base64,@System.Convert.ToBase64String(Model.ImageData)" width="200" height="200" asp-append-version="true" />
            </span>
        </div>
        <div class="card-body">
            <h5> Price : @Model.Price</h5>

            <h5>
                Gander : <select asp-for="@Model.GanderId" class="form-control" asp-items="ViewBag.GanderId"></select>
            </h5>
        </div>
        <div class="card-footer">
            <a asp-action="Delete" asp-controller="Manage" class="btn btn-sm btn-danger" asp-route-Id="@Model.IteamId">Remove Product</a>

        </div>
        <div class="card-footer">
            <a asp-action="Delete" asp-controller="Manage" class="btn btn-sm btn-danger" asp-route-Id="@Model.IteamId">Remove Product</a>
            <a asp-action="UpdateItem" asp-controller="Manage" class="btn btn-sm btn-success" asp-route-Id="@Model.IteamId">Update Product</a>

            <a asp-action="Upload" asp-controller="Manage" class="btn btn-sm btn-info" asp-route-Id="@Model.IteamId">Upload More Images</a>
        </div>

    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Upload" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.IteamId" />
                <div class="form-group">
                    <label asp-for="ImageData" class="control-label"></label>
                    <div class="custom-file">
                        <input type="file" multiple="multiple" asp-for="ImageData" class="form-control custom-file-input" />
                        <label asp-for="ImageData" class="custom-file-label">Multiple Image files</label>
                        <span asp-validation-for="ImageData" class="text-danger">
                            @ViewBag.file
                        </span>
                    </div>

                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>

