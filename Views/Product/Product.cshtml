@model IEnumerable<IteamViewModel>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="./Product/images/favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="./Product/css/styles.css" />
    <title>Boy’s T-Shirt</title>
</head>

<body>
  

    <!-- All Products -->
    <section class="section all-products" id="products">
        <div class="top container">
            <h1>All Products</h1>
            <form>
                <select>
                    <option value="1">Defualt Sorting</option>
                    <option value="2">Sort By Price</option>
                    <option value="3">Sort By Popularity</option>
                    <option value="4">Sort By Sale</option>
                    <option value="5">Sort By Rating</option>
                </select>
                <span><i class='bx bx-chevron-down'></i></span>
            </form>
        </div>

        @if (Model.Any())
        {
            <div class="product-center container">
                @foreach (var Data in Model)
                {

                <div class="product">
                    <div class="product-header">
                        <img class="img-responsive" role="img" src="data:image/jpg;base64,@System.Convert.ToBase64String(Data.IteamModel.ImageIteam)" asp-append-version="true" alt="@Data.IteamModel.ItermName" />
                        <ul class="icons">
                            <span><i class="bx bx-heart"></i></span>
                            <a href="cart.html">
                                <span><i class="bx bx-shopping-bag"></i></span>
                            </a>
                        </ul>
                    </div>
                    <div class="product-footer">
                        <div>
                            <a asp-action="Detail" asp-controller="Product" asp-route-Id="@Data.IteamModel.IteamId">
                                <h3>@Data.CategoryModel.CategoryName</h3>
                            </a>
                            <div class="rating">
                                <h5>@Data.IteamModel.ItermName</h5>
                            </div>
                        </div>
                        <div>
                            <h4 class="price">@Data.IteamModel.Price</h4>&nbsp;&nbsp;<span class="text-muted">@Data.GanderModel.Gander</span>
                        </div>
                    </div>
                </div>

                }

            </div>
        }
        else
        {
            <div class="card text-center">
                No Product Yet
            </div>
        }
    </section>

    <section class="pagination">
        <div class=" container">
            <span>1</span>
            <span>2</span>
            <span>3</span>
            <span>4</span>
            <span><i class='bx bx-right-arrow-alt'></i></span>
        </div>
    </section>
    <!-- End Footer -->
    <!-- GSAP -->
    <!-- Custom Script -->
    <script src="./Product/js/index.js"></script>
</body>

</html>
