@model ProductsListViewModel
<link href="~/Product/css/styles.css" rel="stylesheet" />
<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Subscription";
}

<div class="container text-center align-content-center">
    <p class="text-center">
        Wanna Sell your product with us ?
    </p>
    <div class="row text-center align-content-center justify-content-center col-12 col-8 col-4">
       
            <div class="card align-content-center">
                <div class="card-body">
                   
                        <form asp-controller="Account" asp-action="Register" method="get">
                            <input name="Sell" hidden value="Sell">
                            <input type="submit" style="max-width:15rem;border-radius:5%;" class="form-control btn btn-sm btn-info font-weight-bolder" value="Standad Plan" />
                        </form>
                        <br />
                        <div class="card-text text-center font-weight-bolder p-1">
                       
                            <h5 class="font-weight-bolder">Upload up to items 50</h5>
                          
                            <h5 class="font-weight-bolder">Online Payment with Payfast</h5>
                           
                            <h5 class="font-weight-bolder">Link 2 User Account</h5>
                          
                            <small class="text-muted font-weight-bold">
                                R 120 p/m
                            </small>
                        </div>
                   
                </div>
            </div>
            
            <div class="card align-content-center">
                <div class="card-body">
                   
                        <form asp-controller="Account" asp-action="Register" method="get">
                            <input name="Sell" hidden value="Sell">
                            <input type="submit" style="max-width:20rem;border-radius:5%;" class="form-control btn btn-sm btn-info font-weight-bolder" value="Free Plan" />
                        </form>
                        <br />
                        <div class="card-text text-center font-weight-bolder text-wrap P1">

                            <h5 class="font-weight-bolder">Direct/Deposite Bank Payment</h5>

                            <h5 class="font-weight-bolder">Link Profile with whatsapp</h5>

                            <h5 class="font-weight-bolder">Easy to manage your oders</h5>

                            <h5 class="font-weight-bolder">Upload up to items 5 max product</h5>

                            <small class="text-muted font-weight-bold">
                                Free for Lifetime
                            </small>
                        </div>
                   
                </div>
            </div>
    </div>
</div>

<section class="section all-products" id="products">
    <h4 class="text-center">Si Store Eccommerce</h4>
    <hr class="my-4">

    @if (Model.Product.Any())
    {
        <div class="product-center container">
            @foreach (var Data in Model.Product)
            {

                <div class="product">
                    <div class="product-header">
                        <img class="img-responsive" role="img" src="data:image/jpg;base64,@System.Convert.ToBase64String(Data.IteamModel.ImageIteam)" asp-append-version="true" alt="@Data.IteamModel.ItermName" />
                        <ul class="icons">

                            <a asp-action="Detail" asp-controller="Product" asp-route-I="@true" asp-route-Id="@Data.IteamModel.IteamId">
                                <span>
                                    <i class="bx bx-heart">

                                        <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                             height="16" fill="Red" class="bi bi-heart" viewBox="0 0 16 16">
                                            <path d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314
                              4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542
                              6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8
                              2.748zM8 15C-7.333 4.868 3.279-3.04 7.824
                              1.143c.06.055.119.112.176.171a3.12 3.12 0
                              0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                                        </svg>

                                    </i>
                                </span>

                            </a>
                            <a asp-action="Detail" asp-controller="Product" asp-route-Id="@Data.IteamModel.IteamId">
                                <span>
                                    <i class="bx bx-shopping-bag">

                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">

                                            <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />

                                        </svg>
                                    </i>
                                </span>
                            </a>
                        </ul>
                    </div>
                    <div class="product-footer">
                        <div>
                            <a asp-action="Detail" asp-controller="Product" asp-route-Id="@Data.IteamModel.IteamId">
                                <h3>@Data.CategoryModel.CategoryName</h3>
                            </a>
                            <div class="rating">
                                <h5>@Data.IteamModel.ItermName</h5>
                            </div>
                        </div>
                        <div>
                            <h4 class="price">R@(Data.IteamModel.Price)</h4>&nbsp;&nbsp;<span class="text-muted">@Data.GanderModel.Gander</span>
                        </div>
                    </div>
                </div>

            }

        </div>
    }
    else
    {
        <div class="card text-center">
            No product yet to display
        </div>
    }
</section>
<a style="text-decoration:none;" class="rounded btn btn-sm font-weight-bold" asp-area="" asp-controller="Product" asp-action="Product">
    <h4 class="text-center">View more shops and product ...</h4>
</a>
<hr />

