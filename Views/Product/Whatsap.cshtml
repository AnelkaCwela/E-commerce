@model WhastappModel
@{

    ViewData["Title"] = "Whatsapp";
    Layout = "Anele";
}

<h1> Whatsapp  update</h1>
<h5 class="text-muted">Will be visible on your profile</h5>
<hr />
@if(ViewBag.Error!=null)
            {
    <div class="text-muted alert alert-dismissible">
        @ViewBag.Error
    </div>
            }
<div class="row">
    <div class="col-md-4">
        <form asp-action="Whatsap" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="WhasstapId" type="hidden" />
            <div class="form-group">
                <label class="control-label">Whatsapp Number</label>
                <input asp-for="Phon" class="form-control" /><small>format e.g 0712345789</small>
                <span asp-validation-for="Phon" class="text-danger"></span>
            </div>

            <div class="custom-control custom-checkbox">
                <input asp-for="Statuse" type="checkbox" class="custom-control-input" id="faultUnchecked">
                <label class="custom-control-label" for="faultUnchecked">Statuse</label> <small class="text-muted">Tick to activate Whatsapp Number</small>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
